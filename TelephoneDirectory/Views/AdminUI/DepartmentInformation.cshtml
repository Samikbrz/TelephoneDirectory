@using TelephoneDirectory.Models.Entity
@model List<Department>
@{
    ViewBag.Title = "DepartmentInformation";
}
@if (Session["UserName"] != null)
{
    <html>
    <head>
        <title>Departman Bilgileri</title>
    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/AdminUI/DepartmentInformation">Departman Bilgileri</a>
                </div>
            </div>
        </nav>
        <table class="table table-bordered">
            <tr>
                <th>Departman Id</th>
                <th>Departman Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
            <tbody>
                @foreach (var information in Model)
                {
                    <tr>
                        <td>@information.DepartmentId</td>
                        <td>@information.DepartmentName</td>
                        <td><a class="btn btn-danger" href="/AdminUI/DeleteDepartment/@information.DepartmentId" id="BtnSil">Sil</a></td>
                        <td><a class="btn btn-success" href="/AdminUI/UpdateDepartment/@information.DepartmentId">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <form method="post">
                <div class="form-group">
                    <label>Departman Adı</label>
                    <input type="text" class="form-control" name="DepartmentName" required />
                </div>
                <div style="margin-top:15px">
                    <button class="btn btn-info" href="/AdminUI/DepartmentInformation">Ekle</button>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div style="color:red">
                        @ViewBag.Message
                    </div>
                }
            </form>
        </div>       
    </body>
</html>
}
else
{
    <a class="btn btn-success" href="/AdminUI/Login">Lütfen Giriş Yapınız</a>
}





