@model TelephoneDirectory.Models.Entity.Working

@{
    ViewBag.Title = "AddNewWorking";
}
@if (Session["UserName"]!=null)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Yeni Kullanıcı Ekle</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand">Yeni Kullanıcı Ekle</a>
                </div>
            </div>
        </nav>
        <div>
            <form method="post">
                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" class="form-control" name="Name" maxlength="10" required />
                </div>
                <div class="form-group">
                    <label>Soyad</label>
                    <input type="text" class="form-control" name="Surname" maxlength="10" required />
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    <input type="tel" class="form-control" name="TelephoneNumber" maxlength="11" required />
                </div>
                <div class="form-group">
                    <label>Departman</label>
                    @Html.DropDownListFor(i => i.Department, (List<SelectListItem>)ViewBag.Value1, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Yönetici</label>
                    @Html.DropDownListFor(i => i.Administrator, (List<SelectListItem>)ViewBag.Value2, new { @class = "form-control" })
                </div>
                <div style="margin-top:15px">
                    <button class="btn btn-info" href="/AdminUI/Index">Ekle</button>
                </div>
            </form>
        </div>
    </body>
</html>
}
else
{
<a class="btn btn-success" href="/AdminUI/Login">Lütfen Giriş Yapınız</a>
}



